{
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "1.2.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/urlBlock.js",
      "js/general.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/urlBlock.js",
        "js/general.js"
      ]
    }
  ],
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  "browser_action": {
    "default_icon": "image/icon48.png",
    "default_title": "URL Block",
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html",
  "default_locale": "en"
}